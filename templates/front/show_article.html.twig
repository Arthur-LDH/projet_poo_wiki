{% extends 'front/layout/layout.html.twig' %}

{% block title %}
	{{ article.name }}
{% endblock %}

{% block body %}
	{% include "front/layout/header.html.twig" %}
	{% include "front/layout/sidebar.html.twig" %}
	<section id="main">
		<div>
			{# START ARTICLE SHOW #}
			<div class="show">
				<div>
					<div class="headerArticle">
						<img src="/build/images/article_img/{{article.img}}" alt="">
						<p class="year">
							{{ article.name|capitalize }}
							-
							{{ article.licence.name|capitalize}}
							<br>
							Auteur :
							{{ article.author|capitalize}}, le {{article.createdat|date("d/m/Y")}}
							{% if article.createdat != article.updatedat %}
							Derni√®re mofidication le {{article.updatedat|date("d/m/Y")}}
							{% endif %}
						</p>
					</div>
					<div class="bodyArticle">
						{{article.description|raw}}
						{{article.content|raw}}
					</div>
				</div>
			</div>
			{# END ARTICLE SHOW #}
			{# START COMMENT SECTION #}
			<div class="commentSection">
				<div class="commentList">
					<h5>
						Liste des derniers commentaires :
					</h5>
					{% for comment in article.comments|slice(0, 5) %}
						<div class="comment">
							<p>
								{{ comment.author }}
								<br>
								{{ comment.content }}
							</p>
						</div>
					{% endfor %}
				</div>
				{% if is_granted("ROLE_USER") %}
					<div class="commentForm">
						{{ form(comment_form) }}
						</div>
					</div>
				{% endif %}
				{# END COMMENT SECTION #}
			</div>
		</div>
	</section>
	{% include "front/layout/footer.html.twig" %}
{% endblock %}
