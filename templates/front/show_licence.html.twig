{% extends 'front/layout/layout.html.twig' %}

{% block title %}
	Liste des jeux sur
	{{ licence.name | capitalize }}
{% endblock %}

{% block body %}
	{% include "front/layout/header.html.twig" %}
	{% include "front/layout/sidebar.html.twig" %}
	<section id="main">
		<div>
			<div class="main_title">
				<h2>
					{{ licence.name | upper }}
				</h2>
			</div>
			{# START LICENCE SHOW #}
			<div class="show">
				<div>
					<img src="/build/images/licence_img/{{licence.img}}" alt="">
					<div>
						<p class="year">
							{{ licence.name | capitalize }}
							<br>
						</p>
						{{ licence.description|raw}}
					</div>
				</div>
			</div>
			{# END LICENCE SHOW #}
			<hr
			class="divider line glow">
			{# START ARTICLES GALLERY FROM CURRENT LICENCE #}
			{% for article in articles %}
			{% if article.state and article.moderated %}
				<div class="articles-gallery">
					<div>
						<div>
							<img src="/build/images/article_img/{{article.img}}" alt="">
						</div>
						<div>
							<h4>
								{{ article.name }}
							</h4>
							<p>
								{{ article.description }}
							</p>
						</div>
						<div>
							<button>
								<a href="/articles/{{article.slug}}">
									Voir
								</a>
							</button>
						</div>
					</div>
			{% endif %}
			{% endfor %}
				{# END ARTICLES GALLERY FROM CURRENT LICENCE #}
			</div>
		</section>
		{% include "front/layout/footer.html.twig" %}
	{% endblock %}
